---
import Analytics from "@/components/Analytics.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import SearchModal from "@/components/SearchModal.astro";
import LocaleHtmlHead from "@/components/i18n/LocaleHtmlHead.astro";
import LocaleSuggest from "@/components/i18n/LocaleSuggest.astro";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_KEYWORDS, X_ACCOUNT } from "@/consts";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations, LOCALES, getLocalePaths, DEFAULT_LOCALE, type Lang } from "@/i18n";
import "@/styles/global.css";

const t = useTranslations(Astro.currentLocale as Lang);

interface Props {
  title?: string;
  description?: string;
  /** og:type，文章页传 "article"，默认 "website" */
  type?: "website" | "article";
  /** 文章/分享图（绝对 URL），不传则用站点头图 ogp.png */
  image?: string;
  /** 分享图描述，用于 og:image:alt / twitter:image:alt */
  imageAlt?: string;
  /** 文章发布时间，用于 article:published_time */
  articlePublishedTime?: string;
  /** 文章修改时间，用于 article:modified_time */
  articleModifiedTime?: string;
  /** 文章作者，用于 article:author */
  articleAuthor?: string;
  /** 面包屑 [{ name, url }]，用于 BreadcrumbList JSON-LD */
  breadcrumbs?: { name: string; url: string }[];
  /** 博文页侧栏时加宽主区域，正文保持 800px */
  contentWide?: boolean;
  frontmatter?: undefined;
}

const {
  title,
  description,
  type: ogType = "website",
  image: customImage,
  imageAlt: customImageAlt,
  articlePublishedTime,
  articleModifiedTime,
  articleAuthor,
  breadcrumbs,
  /** 博文页等需要侧栏时加宽主区域，正文保持 800px，侧栏在右侧 */
  contentWide = false,
} = Astro.props.frontmatter || Astro.props;

const locale = Astro.currentLocale as Lang;
const localeTitle = title ? `${title} | ${t(SITE_TITLE)}` : t(SITE_TITLE);
const localeDescription = description || t(SITE_DESCRIPTION);
const siteOrigin = Astro.site?.toString().replace(/\/$/, "") || "https://inaodeng.com";
const canonicalUrl = new URL(Astro.url.pathname, siteOrigin).href;
const defaultOgImage = `${siteOrigin}/ogp.png`;
const ogImageUrl = customImage || defaultOgImage;
const ogImageAlt = customImageAlt || (title || t(SITE_TITLE));
const ogImageWidth = 1200;
const ogImageHeight = 630;
const pathWithoutLang = Astro.url.pathname.replace(/^\/[a-zA-Z-]+/, "") || "/";
const defaultLocaleUrl = siteOrigin + getRelativeLocaleUrl(DEFAULT_LOCALE, pathWithoutLang);

const localePaths = getLocalePaths(Astro.url);
const personSameAs = [
  "https://github.com/naodeng",
  "https://x.com/inaodeng",
  "https://naodeng.medium.com/",
  "https://weibo.com/u/1651778270",
  "https://ko-fi.com/naodeng",
];
const webSiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: t(SITE_TITLE),
  description: localeDescription,
  url: siteOrigin,
  inLanguage: [locale === "zh-cn" ? "zh-CN" : "en"],
  publisher: {
    "@type": "Person",
    name: "Nao Deng",
    url: siteOrigin,
    sameAs: personSameAs,
  },
  potentialAction: {
    "@type": "SearchAction",
    target: {
      "@type": "EntryPoint",
      urlTemplate: `${siteOrigin}/${locale}/?q={search_term_string}`,
    },
    "query-input": "required name=search_term_string",
  },
};
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Nao Deng",
  url: siteOrigin,
  sameAs: personSameAs,
};
const breadcrumbSchema =
  breadcrumbs && breadcrumbs.length > 0
    ? {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: breadcrumbs.map((item, i) => ({
          "@type": "ListItem",
          position: i + 1,
          name: item.name,
          item: item.url.startsWith("http") ? item.url : `${siteOrigin}${item.url}`,
        })),
      }
    : null;
---

<html lang={LOCALES[locale].lang || locale} dir={LOCALES[locale].dir || null} data-locale={locale}>
  <head>
    <meta charset="UTF-8" />
    <title>{localeTitle}</title>
    <meta name="description" content={localeDescription} />
    {SITE_KEYWORDS && (
      <meta name="keywords" content={typeof SITE_KEYWORDS === "string" ? SITE_KEYWORDS : t(SITE_KEYWORDS)} />
    )}
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content={articleAuthor || "Nao Deng"} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    {
      localePaths.map((props) => (
        <link
          rel="alternate"
          hreflang={LOCALES[props.lang].lang || props.lang}
          href={`${siteOrigin}${props.path}`}
        />
      ))
    }
    <link rel="alternate" hreflang="x-default" href={defaultLocaleUrl} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" sizes="192x192" href="/android-chrome-192x192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="color-scheme" content="light dark" />
    <meta name="algolia-site-verification" content="B0319275B670BBB0" />

    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={localeTitle} />
    <meta property="og:site_name" content={t(SITE_TITLE)} />
    <meta property="og:description" content={localeDescription} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:image:width" content={String(ogImageWidth)} />
    <meta property="og:image:height" content={String(ogImageHeight)} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:locale" content={locale === "zh-cn" ? "zh_CN" : "en_US"} />
    <meta property="og:locale:alternate" content={locale === "zh-cn" ? "en_US" : "zh_CN"} />
    {ogType === "article" && articlePublishedTime && (
      <meta property="article:published_time" content={articlePublishedTime} />
    )}
    {ogType === "article" && articleModifiedTime && (
      <meta property="article:modified_time" content={articleModifiedTime} />
    )}
    {ogType === "article" && articleAuthor && (
      <meta property="article:author" content={articleAuthor} />
    )}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={t(X_ACCOUNT)} />
    <meta name="twitter:title" content={localeTitle} />
    <meta name="twitter:description" content={localeDescription} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={ogImageAlt} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      fetchpriority="high"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;800&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;800&display=swap"
      media="print"
      onload={`this.media='all'`}
    />
    <link
      rel="preload"
      as="style"
      fetchpriority="high"
      href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp&display=swap"
      media="print"
      onload={`this.media='all'`}
    />

    <script type="application/ld+json" set:html={JSON.stringify(webSiteSchema)} is:inline />
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} is:inline />
    {breadcrumbSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} is:inline />
    )}
    <LocaleHtmlHead />
    <Analytics />
    <!-- Counterscale 自部署统计 (https://analytics.inaodeng.com) -->
    <script is:inline
      id="counterscale-script"
      data-site-id="inaodeng.com"
      src="https://analytics.inaodeng.com/tracker.js"
      defer
    />
  </head>

  <body>
    <a href="#main" class="skip-link">{locale === "zh-cn" ? "跳到主内容" : "Skip to main content"}</a>
    <LocaleSuggest />
    <Header />

    <main id="main" class:list={["l-main", "l-content", contentWide && "l-content--with-sidebar"]}>
      <slot />
    </main>

    <Footer />

    <SearchModal />

    {import.meta.env.DEV && (
      <style>
        :root {
          scroll-behavior: auto;
        }
      </style>
    )}
    <style is:global>
      .skip-link {
        position: absolute;
        left: -9999px;
        z-index: 9999;
        padding: 0.75rem 1.25rem;
        background: var(--color-theme);
        color: var(--color-base);
        font-weight: 700;
        text-decoration: none;
        border-radius: 0 0 8px 0;
      }
      .skip-link:focus {
        left: 0;
        top: 0;
      }
    </style>
  </body>
</html>
