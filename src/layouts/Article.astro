---
import Base from "@/layouts/Base.astro";

interface Props {
  title?: string;
  description?: string;
  frontmatter?: undefined;
}

const { title, description } = Astro.props.frontmatter || Astro.props;
---

<Base title={title} description={description}>
  <article>
    <slot />
  </article>
</Base>

<style>
  article {
    > * {
      margin-block: 1.2em 0;
      margin-inline: 0;
    }
    p {
      font-weight: 400;
    }
    h2 {
      margin-block: 3em 0;
      padding-block-end: 0.2em;
      border-inline-start: 4px solid var(--color-accent);
      padding-inline-start: var(--sp-s);
      line-height: 1.4;
      font-size: 1.6rem;
    }
    h3 {
      margin-block: 2em 0;
      padding-block-end: 0.2em;
      line-height: 1.4;
      font-size: 1.4rem;
      border-block-end: 1px solid
        color-mix(in srgb, var(--color-main) 10%, transparent);
    }
    h4 {
      margin-block: 2em -0.4em;
      line-height: 1.4;
      font-size: 1.1rem;
    }
    ul {
      list-style: disc;
      padding-inline-start: 1.5em;
    }
    ol {
      list-style: decimal;
      padding-inline-start: 1.5em;
    }
    li {
      margin-block: 0 0.5em;
      line-height: 1.4;
    }
    :not(pre) code {
      font-family: Consolas, "Courier New", Courier, Monaco, monospace;
      color: var(--color-theme);
      background-color: color-mix(in srgb, var(--color-main) 8%, transparent);
      padding-block: 0.2em;
      padding-inline: 0.4em;
      border-radius: 2px;
      font-size: 0.9rem;
    }
    blockquote {
      font-style: italic;
      color: color-mix(in srgb, var(--color-main) 80%, transparent);
      background: color-mix(in srgb, var(--color-main) 5%, transparent);
      padding: 1em;
      border-inline-start: 2px solid
        color-mix(in srgb, var(--color-main) 10%, transparent);
    }
    a {
      text-decoration: underline;
      color: var(--color-theme);
      font-weight: 500;
    }
    img {
      border-radius: 4px;
      background-color: color-mix(in srgb, var(--color-main) 10%, transparent);
    }
    pre {
      direction: ltr;
      padding: 1em;
      border-radius: 4px;
      border: 2px solid color-mix(in srgb, var(--color-main) 20%, transparent);
    }
  }
</style>
