---
/**
 * 博文下方分享组件：复制链接、X、微博、LinkedIn、Facebook、Instagram
 */
interface Props {
  title: string;
  url: string;
  /** 是否中文环境，用于文案与是否显示微博 */
  locale?: "zh-cn" | "en";
}

const { title, url, locale = "en" } = Astro.props;
const isZh = locale === "zh-cn";
const labelShare = isZh ? "分享" : "Share";
const labelCopy = isZh ? "复制链接" : "Copy link";
const labelCopied = isZh ? "已复制" : "Copied";
const labelCopyFail = isZh ? "复制失败" : "Copy failed";
const labelCopyUnsupported = isZh ? "请手动复制链接" : "Please copy the link manually";
const labelTwitter = "X (Twitter)";
const labelWeibo = "微博";
const labelLinkedIn = "LinkedIn";
const labelFacebook = "Facebook";
const labelInstagram = "Instagram";

const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const twitterUrl = `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`;
const weiboUrl = `https://service.weibo.com/share/share.php?url=${encodedUrl}&title=${encodedTitle}`;
const linkedInUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;
// Instagram 无网页分享链接，打开 Instagram 后用户可手动粘贴链接分享
const instagramUrl = `https://www.instagram.com/`;
---

<section class="article-share" aria-label={labelShare}>
  <span class="article-share-label">{labelShare}</span>
  <div class="article-share-buttons">
    <button type="button" class="article-share-btn article-share-copy" data-url={url} title={labelCopy} aria-label={labelCopy}>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
      </svg>
      <span class="article-share-btn-text">{labelCopy}</span>
    </button>
    <a href={twitterUrl} target="_blank" rel="noopener noreferrer" class="article-share-btn" title={labelTwitter} aria-label={labelTwitter}>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
    </a>
    {isZh && (
      <a href={weiboUrl} target="_blank" rel="noopener noreferrer" class="article-share-btn" title={labelWeibo} aria-label={labelWeibo}>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M9.599 2.006C4.45 2.006 0.274 6.184 0.274 11.333c0 5.149 4.176 9.327 9.325 9.327 5.149 0 9.325-4.178 9.325-9.327C18.924 6.184 14.748 2.006 9.599 2.006zm5.325 5.324c.353 0 .625.272.625.625s-.272.625-.625.625-.625-.272-.625-.625.272-.625.625-.625zm-3.525.625c0-.353.272-.625.625-.625s.625.272.625.625-.272.625-.625.625-.625-.272-.625-.625zm2.975 2.475c-.601-.601-1.426-.936-2.275-.936-.849 0-1.674.335-2.275.936-.601.601-.936 1.426-.936 2.275 0 .849.335 1.674.936 2.275.601.601 1.426.936 2.275.936.849 0 1.674-.335 2.275-.936.601-.601.936-1.426.936-2.275 0-.849-.335-1.674-.936-2.275z"/>
        </svg>
      </a>
    )}
    <a href={linkedInUrl} target="_blank" rel="noopener noreferrer" class="article-share-btn" title={labelLinkedIn} aria-label={labelLinkedIn}>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </a>
    <a href={facebookUrl} target="_blank" rel="noopener noreferrer" class="article-share-btn" title={labelFacebook} aria-label={labelFacebook}>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
    </a>
    <a href={instagramUrl} target="_blank" rel="noopener noreferrer" class="article-share-btn" title={labelInstagram} aria-label={labelInstagram}>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
      </svg>
    </a>
  </div>
  <span class="article-share-copy-feedback" id="article-share-copy-feedback" aria-live="polite" data-copied={labelCopied} data-copy-fail={labelCopyFail} data-copy-unsupported={labelCopyUnsupported} hidden>{labelCopied}</span>
</section>

<script is:inline>
  (function () {
    const btn = document.querySelector(".article-share-copy");
    const feedback = document.getElementById("article-share-copy-feedback");
    if (!btn || !feedback) return;
    btn.addEventListener("click", function () {
      const url = btn.getAttribute("data-url") || "";
      if (!url) return;
      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(url).then(function () {
          feedback.hidden = false;
          feedback.textContent = feedback.getAttribute("data-copied") || "Copied";
          setTimeout(function () { feedback.hidden = true; }, 1500);
        }).catch(function () {
          feedback.hidden = false;
          feedback.textContent = feedback.getAttribute("data-copy-fail") || "Copy failed";
          setTimeout(function () { feedback.hidden = true; }, 2000);
        });
      } else {
        feedback.hidden = false;
        feedback.textContent = feedback.getAttribute("data-copy-unsupported") || "Copy not supported";
        setTimeout(function () { feedback.hidden = true; }, 2000);
      }
    });
  })();
</script>

<style>
  .article-share {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem 1rem;
    margin-block-start: 2rem;
    margin-block-end: 0;
    padding-block: 1.25rem;
    border-block-start: 1px solid color-mix(in srgb, var(--color-main) 12%, transparent);
  }
  .article-share-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-main);
    opacity: 0.85;
  }
  .article-share-buttons {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }
  .article-share-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    padding: 0.5rem 0.75rem;
    border-radius: 10px;
    color: var(--color-main);
    background: color-mix(in srgb, var(--color-main) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-main) 15%, transparent);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;
    cursor: pointer;
  }
  .article-share-btn:hover,
  .article-share-btn:focus-visible {
    background: color-mix(in srgb, var(--color-theme) 12%, transparent);
    border-color: color-mix(in srgb, var(--color-theme) 25%, transparent);
    color: var(--color-theme);
  }
  .article-share-btn:focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px color-mix(in srgb, var(--color-theme) 30%, transparent);
  }
  .article-share-btn svg {
    flex-shrink: 0;
  }
  .article-share-btn-text {
    white-space: nowrap;
  }
  @media (max-width: 480px) {
    .article-share-btn-text {
      display: none;
    }
    .article-share-btn {
      padding: 0.5rem;
    }
  }
  .article-share-copy-feedback {
    font-size: 0.85rem;
    color: var(--color-theme);
    margin-inline-start: 0.25rem;
  }
</style>
