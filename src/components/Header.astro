---
import LocaleSelect from "@/components/i18n/LocaleSelect.astro";
import { useTranslations, type Lang } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
import { SITE_TITLE, SITE_SLOGAN, NAV_HOME, NAV_ABOUT, NAV_PROJECTS, NAV_ARCHIVE, NAV_SEARCH, SEARCH_OPEN_HINT } from "@/consts";

const t = useTranslations(Astro.currentLocale as Lang);
const locale = Astro.currentLocale as Lang;

const isActive = (path: string) =>
  getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
---

<header class="l-header">
  <div class="site-brand">
    <h1 dir="ltr">
      <a href={getRelativeLocaleUrl(locale, "/")}>
        <img src="/favicon.svg" alt="" class="site-logo" width="36" height="36" />
        <span>{t(SITE_TITLE)}</span>
      </a>
    </h1>
    <p class="site-slogan">{t(SITE_SLOGAN)}</p>
  </div>

  <nav class="l-content">
    <ul>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/")}
          class={isActive("/") ? "active" : null}
        >
          {t(NAV_HOME)}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/blog")}
          class={isActive("/blog") ? "active" : null}
        >
          {t({ en: "Blog", "zh-cn": "博客" })}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/archive")}
          class={isActive("/archive") ? "active" : null}
        >
          {t(NAV_ARCHIVE)}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/projects")}
          class={isActive("/projects") ? "active" : null}
        >
          {t(NAV_PROJECTS)}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/about")}
          class={isActive("/about") ? "active" : null}
        >
          {t(NAV_ABOUT)}
        </a>
      </li>
      <li class="nav-tool">
        <LocaleSelect compact />
      </li>
      <li class="nav-tool">
        <button type="button" class="btn-icon" aria-label={t(NAV_SEARCH)} title={t(SEARCH_OPEN_HINT)} data-search-open>
          <span class="material-icons-sharp" aria-hidden="true">search</span>
          <span class="btn-icon-kbd">⌘K</span>
        </button>
      </li>
    </ul>
  </nav>
</header>

<style>
  header {
    display: grid;
    place-items: center;
    gap: var(--sp-s);
  }
  .site-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.35em;
  }
  .site-slogan {
    margin: 0;
    padding: 0.25em 0.75em;
    font-size: 0.85rem;
    font-weight: 600;
    font-family: var(--english-font);
    color: var(--color-theme);
    letter-spacing: 0.04em;
    background: color-mix(in srgb, var(--color-theme) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-theme) 25%, transparent);
    border-radius: 999px;
    transition: 0.2s ease-out;
  }
  .site-slogan:hover {
    background: color-mix(in srgb, var(--color-theme) 16%, transparent);
    border-color: color-mix(in srgb, var(--color-theme) 35%, transparent);
  }
  h1 {
    margin-block-start: var(--sp-l);
    font-size: 40px;
    font-family: var(--english-font);
    font-weight: 900;
  }
  @media (width < 480px) {
    h1 {
      font-size: 28px;
    }
  }
  h1 a {
    display: flex;
    align-items: center;
    gap: 0.4em;
  }
  h1 a .site-logo {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    object-fit: contain;
  }
  @media (width < 480px) {
    h1 a .site-logo {
      width: 28px;
      height: 28px;
    }
  }
  nav {
    display: flex;
    align-items: center;
    gap: var(--sp-m);
  }
  ul {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: var(--sp-s);
    margin-block-start: var(--sp-s);
  }
  @media (max-width: 880px) {
    ul {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
  nav a {
    font-size: 1.05rem;
    display: inline-block;
    font-weight: 600;
    letter-spacing: 0.05em;
    padding-block: 0.2em;
    padding-inline: 0.4em;
    border-radius: 4px;
    white-space: nowrap;
  }
  nav a:hover,
  nav a:active {
    background-color: color-mix(
      in srgb,
      var(--color-theme) 5%,
      transparent
    );
  }
  nav a.active {
    pointer-events: none;
    color: var(--color-theme);
  }
  nav li {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }
  .nav-tool {
    display: flex;
    align-items: center;
  }
  .btn-icon {
    display: inline-flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    height: 36px;
    padding-inline: 0.5rem;
    white-space: nowrap;
    font: inherit;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-main);
    background: transparent;
    border: 2px solid transparent;
    border-radius: 4px;
    cursor: pointer;
    transition: 0.2s ease-out;
  }
  .btn-icon:hover,
  .btn-icon:focus-visible {
    background-color: color-mix(in srgb, var(--color-theme) 5%, transparent);
    border-color: color-mix(in srgb, var(--color-theme) 20%, transparent);
  }
  .btn-icon:focus-visible {
    outline: none;
  }
  .btn-icon .material-icons-sharp {
    font-size: 22px;
    color: var(--color-theme);
    opacity: 0.85;
    flex-shrink: 0;
  }
  .btn-icon-kbd {
    flex-shrink: 0;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 2px 5px;
    color: var(--color-main);
    background-color: color-mix(in srgb, var(--color-theme) 10%, var(--color-base));
    border: 1px solid color-mix(in srgb, var(--color-theme) 25%, transparent);
    border-radius: 4px;
    opacity: 0.9;
  }
  nav a .material-icons-sharp {
    opacity: 0.6;
    margin-inline-start: -0.2em;
    font-size: 0.9em;
  }
</style>
