---
import LocaleSelect from "@/components/i18n/LocaleSelect.astro";
import { useTranslations, type Lang } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
import { SITE_TITLE, SITE_SLOGAN, NAV_HOME, NAV_ABOUT, NAV_PROJECTS, NAV_ARCHIVE, NAV_SPONSOR, NAV_SEARCH, SEARCH_OPEN_HINT } from "@/consts";

const t = useTranslations(Astro.currentLocale as Lang);
const locale = Astro.currentLocale as Lang;

const isActive = (path: string) =>
  getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
---

<header class="l-header">
  <div class="site-brand">
    <h1 dir="ltr">
      <a href={getRelativeLocaleUrl(locale, "/")}>
        <img src="/favicon.svg" alt="" class="site-logo" width="36" height="36" />
        <span>{t(SITE_TITLE)}</span>
      </a>
    </h1>
    <p class="site-slogan">{t(SITE_SLOGAN)}</p>
  </div>

  <nav class="l-content">
    <ul>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/")}
          class={isActive("/") ? "active" : null}
        >
          {t(NAV_HOME)}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/blog")}
          class={isActive("/blog") ? "active" : null}
        >
          {t({ en: "Blog", "zh-cn": "博客" })}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/archive")}
          class={isActive("/archive") ? "active" : null}
        >
          {t(NAV_ARCHIVE)}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/projects")}
          class={isActive("/projects") ? "active" : null}
        >
          {t(NAV_PROJECTS)}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/about")}
          class={isActive("/about") ? "active" : null}
        >
          {t(NAV_ABOUT)}
        </a>
      </li>
      <li>
        <a
          href={getRelativeLocaleUrl(locale, "/sponsor")}
          class={isActive("/sponsor") ? "active" : null}
        >
          {t(NAV_SPONSOR)}
        </a>
      </li>
      <li class="nav-tool">
        <LocaleSelect compact />
      </li>
      <li class="nav-tool">
        <button type="button" class="btn-icon" aria-label={t(NAV_SEARCH)} title={t(SEARCH_OPEN_HINT)} data-search-open>
          <span class="material-icons-sharp" aria-hidden="true">search</span>
          <span class="btn-icon-kbd">⌘K</span>
        </button>
      </li>
    </ul>
  </nav>
</header>

<style>
  .l-header {
    display: grid;
    place-items: center;
    gap: var(--sp-m);
    padding-block: var(--sp-s) var(--sp-m);
    border-block-end: 1px solid color-mix(in srgb, var(--color-theme) 12%, transparent);
    background: color-mix(in srgb, var(--color-base) 97%, var(--color-main));
  }
  .site-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.4em;
  }
  .site-slogan {
    margin: 0;
    display: inline-block;
    max-width: 100%;
    padding: 0.35em 0.85em;
    font-size: 0.8125rem;
    font-weight: 600;
    font-family: var(--english-font);
    color: var(--color-theme);
    letter-spacing: 0.03em;
    line-height: 1.4;
    text-align: center;
    background: color-mix(in srgb, var(--color-theme) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-theme) 22%, transparent);
    border-radius: 0.5rem;
    transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
    overflow-wrap: break-word;
  }
  .site-slogan:hover {
    background: color-mix(in srgb, var(--color-theme) 16%, transparent);
    border-color: color-mix(in srgb, var(--color-theme) 35%, transparent);
    transform: translateY(-1px);
  }
  h1 {
    margin-block-start: var(--sp-l);
    font-size: 40px;
    font-family: var(--english-font);
    font-weight: 900;
    letter-spacing: -0.02em;
  }
  @media (width < 480px) {
    h1 {
      font-size: 28px;
    }
  }
  h1 a {
    display: inline-flex;
    align-items: center;
    gap: 0.45em;
    color: var(--color-main);
    text-decoration: none;
    transition: color 0.2s ease, opacity 0.2s ease;
  }
  h1 a:hover {
    opacity: 0.9;
    color: var(--color-theme);
  }
  h1 a .site-logo {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    object-fit: contain;
    transition: transform 0.2s ease;
  }
  h1 a:hover .site-logo {
    transform: scale(1.05);
  }
  @media (width < 480px) {
    h1 a .site-logo {
      width: 28px;
      height: 28px;
    }
  }
  nav {
    display: flex;
    align-items: center;
    gap: var(--sp-m);
  }
  nav ul {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 0.15rem;
    margin-block-start: var(--sp-s);
  }
  @media (max-width: 880px) {
    nav ul {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.25rem;
    }
  }
  nav a {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    padding: 0.4em 0.65em;
    border-radius: 8px;
    white-space: nowrap;
    text-decoration: none;
    color: color-mix(in srgb, var(--color-main) 90%, transparent);
    transition: color 0.2s ease, background 0.2s ease, box-shadow 0.2s ease;
  }
  nav a:hover,
  nav a:active,
  nav a:focus-visible {
    color: var(--color-main);
    background: color-mix(in srgb, var(--color-theme) 8%, transparent);
    box-shadow: 0 0 0 1px color-mix(in srgb, var(--color-theme) 15%, transparent);
  }
  nav a:focus-visible {
    outline: 2px solid var(--color-theme);
    outline-offset: 2px;
  }
  nav a.active {
    pointer-events: none;
    color: var(--color-theme);
    background: color-mix(in srgb, var(--color-theme) 10%, transparent);
    box-shadow: 0 0 0 1px color-mix(in srgb, var(--color-theme) 25%, transparent);
  }
  nav li {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }
  .nav-tool {
    display: flex;
    align-items: center;
    margin-inline-start: 0.5rem;
    padding-inline-start: 0.75rem;
    border-inline-start: 1px solid color-mix(in srgb, var(--color-theme) 15%, transparent);
  }
  .btn-icon {
    display: inline-flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    height: 38px;
    padding-inline: 0.65rem;
    white-space: nowrap;
    font: inherit;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-main);
    background: color-mix(in srgb, var(--color-theme) 6%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-theme) 22%, transparent);
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
  }
  .btn-icon:hover,
  .btn-icon:focus-visible {
    background: color-mix(in srgb, var(--color-theme) 12%, transparent);
    border-color: color-mix(in srgb, var(--color-theme) 35%, transparent);
    box-shadow: 0 0 0 2px color-mix(in srgb, var(--color-theme) 15%, transparent);
  }
  .btn-icon:focus-visible {
    outline: none;
  }
  .btn-icon .material-icons-sharp {
    font-size: 20px;
    color: var(--color-theme);
    opacity: 0.9;
    flex-shrink: 0;
  }
  .btn-icon-kbd {
    flex-shrink: 0;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 3px 6px;
    color: color-mix(in srgb, var(--color-main) 95%, transparent);
    background: color-mix(in srgb, var(--color-theme) 14%, var(--color-base));
    border: 1px solid color-mix(in srgb, var(--color-theme) 28%, transparent);
    border-radius: 6px;
    letter-spacing: 0.02em;
  }
  nav a .material-icons-sharp {
    opacity: 0.7;
    margin-inline-start: -0.15em;
    font-size: 0.95em;
  }
</style>
