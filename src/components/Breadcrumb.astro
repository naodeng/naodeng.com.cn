    color: color-mix(in srgb, var(--color-main) 65%, transparent);
  }
  .breadcrumb-item {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }
  .breadcrumb-link {
    color: inherit;
    text-decoration: none;
  }
  .breadcrumb-link:hover {
    color: var(--color-theme);
    text-decoration: underline;
  }
  .breadcrumb-icon {
