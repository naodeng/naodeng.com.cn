    vertical-align: middle;
  }
  .breadcrumb-icon--current {
    opacity: 0.7;
  }
  .breadcrumb-current {
    color: inherit;
    display: inline-flex;
    align-items: center;
    gap: 0.35em;
  }
  .breadcrumb-sep {
    display: inline-flex;
    align-items: center;
    margin-inline: 0.4rem;
    color: color-mix(in srgb, var(--color-main) 45%, transparent);
    user-select: none;
  }
  .breadcrumb-sep svg {
    vertical-align: middle;
  }
</style>
