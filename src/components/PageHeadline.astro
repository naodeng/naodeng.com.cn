---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header>
  <h1>{title}</h1>
  <slot />
</header>

<style>
  header {
    position: relative;
    overflow: hidden;
    padding-block: var(--sp-l) calc(var(--sp-l) + var(--sp-s));
    padding-inline: var(--sp-m);
    text-align: center;
    border-radius: 20px;
    color: var(--color-theme);
    background: color-mix(in srgb, var(--color-accent) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-theme) 12%, transparent);
  }
  @media (width < 768px) {
    header {
      margin-inline: calc(50% - 50vw);
      border-radius: 0;
      border-inline: none;
      padding-inline: var(--sp-m);
    }
  }
  h1 {
    font-size: 1.65rem;
    font-weight: 800;
    letter-spacing: 0.04em;
    margin: 0;
    line-height: 1.25;
  }
  header :global(.headline-intro) {
    padding-inline: var(--sp-s);
  }
</style>
