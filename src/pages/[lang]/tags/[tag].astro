---
import { LOCALES, useTranslations, type Lang } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import PageHeadline from "@/components/PageHeadline.astro";
import { NAV_HOME, NAV_TAGS } from "@/consts";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

/** 与 getStaticPaths 一致：仅当标签含 "/" 时编码，否则用原文（避免中文等 404） */
function tagToSlug(t: string) {
  return t.includes("/") ? encodeURIComponent(t) : t;
}
function slugToTag(slug: string) {
  return decodeURIComponent(slug);
}

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const paths = [];

  for (const lang of Object.keys(LOCALES)) {
    const langPosts = allPosts.filter((post) => post.id.startsWith(`${lang}/`));
    const tags = [...new Set(langPosts.flatMap((post) => post.data.tags || []))];
    
    for (const tag of tags) {
      // 仅当标签含 "/" 时编码路径段，否则用原文（避免中文等与请求 URL 不一致导致 404）
      const tagSegment = tag.includes("/") ? encodeURIComponent(tag) : tag;
      paths.push({
        params: { lang, tag: tagSegment },
        props: { posts: langPosts.filter((post) => post.data.tags?.includes(tag)) },
      });
    }
  }

  return paths;
}

const { lang, tag: tagSlug } = Astro.params;
const tag = tagSlug ? slugToTag(tagSlug) : "";
const { posts } = Astro.props;
const locale = lang as Lang;
const t = useTranslations(locale);

const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const title = `#${tag}`;
const homeName = typeof NAV_HOME === "string" ? NAV_HOME : (NAV_HOME[locale] ?? (locale === "zh-cn" ? "首页" : "Home"));
const tagsLabel = typeof NAV_TAGS === "string" ? NAV_TAGS : (NAV_TAGS[locale] ?? (locale === "zh-cn" ? "标签" : "Tags"));
const breadcrumbs = [
  { name: homeName, url: `/${lang}/` },
  { name: tagsLabel, url: `/${lang}/tags/` },
  { name: `#${tag}`, url: `/${lang}/tags/${tagToSlug(tag)}/` },
];
---

<Layout {title}>
  <Breadcrumb items={breadcrumbs} />
  <PageHeadline {title}>
    <p class="tag-meta">{posts.length} {t({ en: "posts found", "zh-cn": "篇文章" })}</p>
  </PageHeadline>

  <div class="blog-container">
    <div class="post-grid">
      {
        sortedPosts.map((post) => {
          const [, ...id] = post.id.split("/");
          const postUrl = `/${locale}/blog/${id.join("/").toLowerCase()}/`;
          const dateStr = post.data.date.toLocaleDateString(
            locale === "zh-cn" ? "zh-CN" : "en-US",
            { year: "numeric", month: "short", day: "numeric" }
          );
          
          return (
            <article class="post-card">
              <a href={postUrl} class="post-link">
                {post.data.cover && (
                  <div class="post-cover">
                    <Image src={post.data.cover} alt={post.data.title} width={600} height={337} />
                  </div>
                )}
                <div class="post-content">
                  <time class="post-date">{dateStr}</time>
                  <h2 class="post-title">{post.data.title}</h2>
                  {post.data.description && <p class="post-desc">{post.data.description}</p>}
                </div>
              </a>
              
              {post.data.tags && (
                <div class="post-tags">
                  {post.data.tags.map((t) => (
                    <a href={`/${locale}/tags/${tagToSlug(t)}/`} class={`tag-link ${t === tag ? 'active' : ''}`}>
                      #{t}
                    </a>
                  ))}
                </div>
              )}
            </article>
          );
        })
      }
    </div>
  </div>
</Layout>

<style>
  .tag-meta {
    font-size: 1rem;
    opacity: 0.8;
    margin-block-start: 0.5rem;
    font-weight: 600;
  }

  .blog-container {
    margin-block-start: var(--sp-l);
  }

  .post-grid {
    display: grid;
    gap: var(--sp-m);
    grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
  }

  .post-card {
    display: flex;
    flex-direction: column;
    border-radius: 20px;
    overflow: hidden;
    background: color-mix(in srgb, var(--color-base) 95%, var(--color-main));
    border: 1px solid color-mix(in srgb, var(--color-theme) 15%, transparent);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .post-card:hover {
    transform: translateY(-8px);
    border-color: var(--color-theme);
    box-shadow: 0 12px 40px -12px rgba(0, 0, 0, 0.1);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    flex-grow: 1;
  }

  .post-cover {
    aspect-ratio: 16 / 7.2; /* 高度为 16:9 的 80% */
    overflow: hidden;
    background: var(--color-theme);
  }

  .post-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-card:hover .post-cover img {
    transform: scale(1.08);
  }

  .post-content {
    padding: var(--sp-m);
  }

  .post-date {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-theme);
    opacity: 0.8;
    margin-block-end: 0.5rem;
    display: block;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 800;
    line-height: 1.3;
    color: var(--color-main);
    margin-block-end: 0.75rem;
  }

  .post-desc {
    font-size: 0.9rem;
    line-height: 1.5;
    opacity: 0.7;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    padding: 0 var(--sp-m) var(--sp-m);
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-link {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-theme);
    text-decoration: none;
    padding: 0.2rem 0.5rem;
    border-radius: 6px;
    background: color-mix(in srgb, var(--color-theme) 8%, transparent);
    transition: all 0.2s ease;
  }

  .tag-link:hover, .tag-link.active {
    background: var(--color-theme);
    color: white;
  }
</style>
