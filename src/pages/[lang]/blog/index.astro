---
import { LOCALES, useTranslations, type Lang } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { getCollection } from "astro:content";
import PageHeadline from "@/components/PageHeadline.astro";
import PaginationNav from "@/components/PaginationNav.astro";
import { BLOG_POSTS_PER_PAGE, BLOG_INTRO, NAV_SERIES, NAV_TAGS } from "@/consts";

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

const allPosts = (await getCollection("blog"))
  .filter((post) => post.id.split("/")[0] === locale)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const totalPosts = allPosts.length;
const totalPages = Math.max(1, Math.ceil(totalPosts / BLOG_POSTS_PER_PAGE));
const currentPage = 1;
const posts = allPosts.slice(0, BLOG_POSTS_PER_PAGE);

const title = t({ en: "Blog", "zh-cn": "博客" });

export const getStaticPaths = () =>
  Object.keys(LOCALES).map((lang) => ({
    params: { lang },
  }));
---

<Layout {title}>
  <PageHeadline {title}>
    <p class="headline-intro">{t(BLOG_INTRO)}</p>
    <div class="headline-actions">
      <a href={getRelativeLocaleUrl(locale, "/series")} class="headline-btn">{t(NAV_SERIES)}</a>
      <a href={getRelativeLocaleUrl(locale, "/tags")} class="headline-btn">{t(NAV_TAGS)}</a>
    </div>
  </PageHeadline>

  <div class="blog-container">
    <div class="post-grid">
      {
        posts.map((post) => {
          const [, ...id] = post.id.split("/");
          const postUrl = `/${locale}/blog/${id.join("/").toLowerCase()}/`;
          const dateStr = post.data.date.toLocaleDateString(
            locale === "zh-cn" ? "zh-CN" : "en-US",
            { year: "numeric", month: "short", day: "numeric" }
          );
          
          return (
            <article class="post-card">
              <a href={postUrl} class="post-link">
                <div class="post-cover">
                  <div class="post-cover-bg" role="img" aria-hidden="true" />
                  <div class="post-cover-overlay">
                    <h2 class="post-cover-title">{post.data.title}</h2>
                    <p class="post-cover-meta">
                      <span class="post-cover-author">{post.data.author || "Nao Deng"}</span>
                      <span class="post-cover-sep">·</span>
                      <time datetime={post.data.date.toISOString()}>{dateStr}</time>
                    </p>
                  </div>
                </div>
                <div class="post-content">
                  <time class="post-date">{dateStr}</time>
                  <h2 class="post-title">{post.data.title}</h2>
                  {post.data.description && <p class="post-desc">{post.data.description}</p>}
                </div>
              </a>
              
              {post.data.tags && (
                <div class="post-tags">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <a href={`/${locale}/tags/${tag.includes("/") ? encodeURIComponent(tag) : tag}/`} class="tag-link">
                      #{tag}
                    </a>
                  ))}
                </div>
              )}
            </article>
          );
        })
      }
    </div>
    {totalPages > 1 && (
      <PaginationNav {currentPage} {totalPages} {locale} />
    )}
  </div>
</Layout>

<style>
  .blog-container {
    margin-block-start: var(--sp-l);
  }

  .post-grid {
    display: grid;
    gap: var(--sp-m);
    grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
  }

  .post-card {
    display: flex;
    flex-direction: column;
    border-radius: 20px;
    overflow: hidden;
    background: color-mix(in srgb, var(--color-base) 95%, var(--color-main));
    border: 1px solid color-mix(in srgb, var(--color-theme) 15%, transparent);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .post-card:hover {
    transform: translateY(-8px);
    border-color: var(--color-theme);
    box-shadow: 0 12px 40px -12px rgba(0, 0, 0, 0.1);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    flex-grow: 1;
  }

  .post-cover {
    position: relative;
    aspect-ratio: 16 / 7.2;
    overflow: hidden;
  }

  .post-cover-bg {
    position: absolute;
    inset: 0;
    background-image: url("/default.jpg");
    background-size: cover;
    background-position: center;
    background-color: #1a1a1f;
    filter: blur(3px);
    transform: scale(1.06);
  }

  .post-cover-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    background: rgba(0,0,0,0.52);
    color: #fff;
    text-shadow: 0 1px 3px rgba(0,0,0,0.6);
    text-align: center;
  }

  .post-cover-title {
    margin: 0 0 0.25em 0;
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .post-cover-meta {
    margin: 0;
    font-size: 0.75rem;
    opacity: 0.95;
  }

  .post-cover-sep {
    margin-inline: 0.4em;
    opacity: 0.85;
  }

  .post-content {
    padding: var(--sp-m);
  }

  .post-date {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-theme);
    opacity: 0.8;
    margin-block-end: 0.5rem;
    display: block;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 800;
    line-height: 1.3;
    color: var(--color-main);
    margin-block-end: 0.75rem;
  }

  .post-desc {
    font-size: 0.9rem;
    line-height: 1.5;
    opacity: 0.7;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    padding: 0 var(--sp-m) var(--sp-m);
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-link {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-theme);
    text-decoration: none;
    padding: 0.2rem 0.5rem;
    border-radius: 6px;
    background: color-mix(in srgb, var(--color-theme) 8%, transparent);
    transition: all 0.2s ease;
  }

  .tag-link:hover {
    background: var(--color-theme);
    color: white;
  }

  .headline-intro {
    margin: 0 auto;
    margin-block-start: var(--sp-m);
    max-inline-size: 40rem;
    font-size: 0.9375rem;
    line-height: 1.75;
    color: var(--color-main);
    opacity: 0.88;
    text-align: center;
  }

  .headline-actions {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-block-start: var(--sp-l);
    padding-block-start: var(--sp-m);
    border-block-start: 1px solid color-mix(in srgb, var(--color-theme) 18%, transparent);
  }

  .headline-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.45rem 1.1rem;
    border-radius: 10px;
    background: color-mix(in srgb, var(--color-theme) 12%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-theme) 35%, transparent);
    color: var(--color-theme);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    transition: all 0.22s ease;
  }

  .headline-btn:hover {
    background: var(--color-theme);
    color: var(--color-base);
    border-color: var(--color-theme);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px -4px color-mix(in srgb, var(--color-theme) 35%, transparent);
  }

  .headline-btn:focus-visible {
    outline: 2px solid var(--color-theme);
    outline-offset: 2px;
  }
</style>
